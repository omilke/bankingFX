<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.omilke.bankingfx.report.categories.CategoriesView">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">

        <HBox styleClass="top-control-bar">
            <children>
                <FontAwesomeIconView styleClass="filter-icon"/>
                <DatePicker fx:id="fromDate"/>
                <DatePicker fx:id="toDate"/>
                <ChoiceBox fx:id="selectedCategories"/>
            </children>
        </HBox>
        <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0.0"/>
        <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS"/>
    </VBox>
</AnchorPane>
